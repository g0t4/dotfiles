// https://zed.dev/docs/configuring-zed
{
  // "theme": "Andromeda", // kinda like this or smth in between (todo build my own colors)
  "show_inline_completions": true,
  "tab_bar": {
    "show": true
  },

  "language_models": {
    // "openai": {
    //   "api_url": "https://api.groq.com/openai/v1",
